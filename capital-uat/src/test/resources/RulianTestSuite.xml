<?xml version="1.0" encoding="UTF-8"?>
<suite name="Capital Compare Postgres to Solr" verbose="5" data-provider-thread-count="20">
<!--<suite name="Captial QA Regression" verbose="1">-->
    <parameter name="url" value="http://cbc-qa.ipf.mdx.med"/>
    <parameter name="testLocation" value="phantom"/>
    <listeners>
        <listener class-name="com.capital.WebDriverListener"/>
    </listeners>
    <test name="Current production index: Names that end in y,s,i,e">
        <parameter name="solrIndex" value="contractalt"/>
        <classes>
            <class name="com.capital.test.RulianSearchTest"/>
            <methods>
                <include name="limitedProviderNewSolrSearchTest"/>
            </methods>
        </classes>
    </test>
    <test name="Current production index: All Providers">
        <parameter name="solrIndex" value="contractalt"/>
        <classes>
            <class name="com.capital.test.RulianSearchTest"/>
            <methods>
                <include name="allProviderNewSolrTest"/>
            </methods>
        </classes>
    </test>
    <test name="New index: Names that end in y,s,i,e">
        <parameter name="solrIndex" value="contracts"/>
        <classes>
            <class name="com.capital.test.RulianSearchTest"/>
            <methods>
                <include name="limitedProviderNewSolrSearchTest"/>
            </methods>
        </classes>
    </test>
    <test name="New index: All Providers">
        <parameter name="solrIndex" value="contracts"/>
        <classes>
            <class name="com.capital.test.RulianSearchTest"/>
            <methods>
                <include name="allProviderNewSolrTest"/>
            </methods>
        </classes>
    </test>
</suite>